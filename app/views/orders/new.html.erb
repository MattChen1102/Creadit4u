<br>
<h1 align="center">付款</h1>

<table class='table'>
  <thead>
    <tr>
      <th>商品</th>
      <th>數量</th>
      <th>單價</th>
    </tr>
  </thead>
  <tbody>
    <% current_cart.cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.name %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= number_to_currency cart_item.price %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>合計</th>
      <th></th>
      <th><%= number_to_currency current_cart.total %></th>
    </tr>
  </tfoot>
</table>

<%= simple_form_for @order, html: { class: 'form' }  do |f| %>

  <%= f.object.errors.full_messages.to_sentence if f.object.errors.any? %>

  <%= f.input :name %>
  <%= f.input :mobile %>
  <%= f.input :email %>
  <%= f.button :submit ,class: 'btn btn-primary' %>

<% end %>