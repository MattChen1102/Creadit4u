<div class="row">
  <div class="col-sm-6">
    <%= image_tag 'test.jpg', class: 'pull-left img-responsive' %>
  </div>
  <div class="col-sm-6">
    <h1><%= @product.name %></h1>
    <p>Category: <%= link_to @product.category.name, category_path(@product.category) %></p><br>
    <div class='product-description'><%= @product.description %></div>
    <br>
    <div class="product-content"><%= simple_format(@product.content) %></div>
    <br>
    <div class='product-price'><%= number_to_currency @product.price %></div>
    <br>
    <div>
      <%= link_to '加入預約單', add_category_product_path(@product.category, @product), method: :post, class: 'btn btn-primary' %>
    </div>
    <br>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-6">
    <%= render 'shared/comments/form', url: category_product_comments_path(@product.category, @product) if user_signed_in? %>
  </div>
  <div class="col-sm-6">
    <%= render 'shared/comments/list', comments: @product.comments %>
  </div>
</div>