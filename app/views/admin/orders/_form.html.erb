<%= simple_form_for([:admin, @order]) do |f| %>
  <div class="form-group">
    <%= f.input :name %>
  </div>
  <div class="form-group">
    <%= f.input :email %>
  </div>
  <div class="form-group">
    <%= f.input :mobile %>
  </div>

  <div class="form-group">
    <%= f.input :paid %>  
  </div>

  <div class="form-actions">
    <%= f.button :submit ,class: 'btn btn-primary' %>
  </div>
<% end %>

<div> 
  <%= f.nested_fields_for :order_items do |ff| %>
  <%= ff.collection_select :product_id, Product.all, :id, :name %>
  <%= ff.number_field :quantity %>
  <%= ff.number_field :price %>
  <%= ff.remove_nested_fields_link 'Remove' %>
<% end %>
  <%= f.add_nested_fields_link :order_items %>
</div>
<hr>
<br>