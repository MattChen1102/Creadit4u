        <h4 align="center"><%= f.collection_check_boxes(:user_card_category_ids, UserCardCategory.all, :id, :name) %></h4><hr><br>
        <h4 align="center"><%= f.button :submit ,"新增可提供服務的信用卡" ,class: 'btn btn-primary' %></h4>  
