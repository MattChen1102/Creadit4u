<div class="col-md-4 col-md-offset-4">

  <h2 class="text-center">帳號設定</h2>

  <hr>

  <%= simple_form_for(resource, 
                      as: resource_name, 
                      url: registration_path(resource_name), 
                      html: { method: :put }) do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :email, 
                  :input_html => { :class => "form-control"}, 
                  required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :first_name, 
                  :input_html => { :class => "form-control"} %>

      <%= f.input :last_name, 
                  :input_html => { :class => "form-control"} %>

      <%= f.input :phone_number, 
                  :input_html => { :class => "form-control"} %>

      <%= f.input :password, 
                  :input_html => { :class => "form-control"}, 
                  autocomplete: "off", 
                  hint: "如果沒有要修改密碼，請勿輸入", 
                  required: false %>

      <%= f.input :password_confirmation, 
                  :input_html => { :class => "form-control"}, 
                  required: false %>

      <%= f.input :current_password, 
                  :input_html => { :class => "form-control"}, 
                  hint: "請輸入密碼完成設定修改", 
                  required: true %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Update", :class => "btn btn-default" %>
    </div>
  <% end %>
  <hr>
  <h3 class="text-center">Cancel my account</h3>
  <br>
  <h5 class="text-center">使用體驗不愉快?  
    <%= link_to "Cancel my account", 
      registration_path(resource_name), 
      data: { confirm: "Are you sure?" }, 
      method: :delete %>
  </h5>
  <hr>
  <h5 class="text-center"><%= link_to "Back", :back %></h5>
</div>