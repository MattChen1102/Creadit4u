<div class="col-md-4 col-md-offset-4">
  
  <h2 class="text-center">Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :input_html => { :class => "form-control"}, required: true, autofocus: true %>
    <br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.input :password, :input_html => { :class => "form-control"}, required: true, autocomplete: "off" %>
  </div>

  <div class="form-inputs">
    <%= f.input :password_confirmation,:input_html => { :class => "form-control"}, required: true, autocomplete: "off" %>
  </div>

  <div class="form-actions text-center">
    <p><%= f.button :submit, "Change my password", :class => "btn btn-default" %></p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
